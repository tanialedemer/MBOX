<div class="container">
  <div class="container-fluid">

    <div class="row">
        <div class="col-xs-12">
    		<div class="invoice-title">
    			<h2>Gasto</h2>
    			<h3 class="pull-right">Número # <%= @gasto.id %></h3>
    		</div>
    		<hr>
    		<div class="row">
    			<div class="col-xs-6">
    			</div>
    			<div class="col-xs-6 text-right">
    				<address>
    					<strong>Fecha:</strong><br>
    					<%= @gasto.fecha_compra.strftime("%d/%m/%Y") %><br><br>
    				</address>
    			</div>
    		</div>
    		<div class="row">
		    	<div class="col-md-12">
		    		<div class="panel panel-default">
		    			<div class="panel-heading">
		    				<h3 class="panel-title"><strong>Detalles de Gasto</strong></h3>
		    			</div>
		    			<div class="panel-body">
                <table class="table table-condensed">
                          <thead>
                            <tr>

                          <td><strong>Motivo</strong></td>
                          <td><strong>Descripción</strong></td>


                          </thead>
                          <tbody>

                          <tr>

                          <td class="thick-line"><%= @gasto.motivo %></td>
                          <td class="thick-line"><%= @gasto.descripcion %></td>
                          <td class="thick-line text-right"><h3>Total</h3></td>
                          <td class="thick-line text-right"><h3><%= number_to_currency(@gasto.costo, :unit => "Gs.") %></h3></td>
                          </tr>
                          </tbody>
                          </table>
		    			</div>
		    		</div>
		    	</div>
		    </div>
    	</div>
    </div>
</div>

<%= link_to 'Volver', gasto_index_path %>

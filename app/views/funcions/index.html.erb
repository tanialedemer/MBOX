<div class="container">

<div class="panel panel-default">
  <div class="panel-heading">Funcions</div>
  <div class="panel-body">
<div class="container-fluid">
<p id="notice"><%= notice %></p>



<table>
  <thead>
    <tr>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @funcions.each do |funcion| %>
      <tr>
        <td><%= funcion.descripcion %></td>
        <td><%= link_to 'Show', funcion %></td>
        <td><%= link_to 'Edit', edit_funcion_path(funcion) %></td>
        <td><%= link_to 'Destroy', funcion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Funcion', new_funcion_path %>
</div>
</div>
</div>
</div>

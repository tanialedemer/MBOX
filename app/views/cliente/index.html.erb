<div class="container">
<div class="panel panel-default">
  <div class="panel-heading">Clientes</div>
  <div class="panel-body">

<div class="container-fluid">

<%=form_tag cliente_index_path, :method => 'get', :style => 'padding-left:4em;font-family:bold;' do %>
	<%= label_tag "Filtrar"%>
	<%= text_field_tag :search, params[:search] %>
	<%= submit_tag "Buscar", class:"btn btn-primary" %>
<%end%>
<div class="col-md-5 col-md-offset-5 col-sm-5 col-sm-offset-5">
      <p>
        <%= button_to cliente_new_path, {method: :get, class: "btn btn-success"} do %>
          <span class="glyphicon glyphicon-plus" aria-hidden="true"> </span> Nuevo Cliente
        <% end %>
      </p>
    </div>
<table class="table table-hover">
	  <thead class="thead-dark">
	<tr><TH>ID</TH>
		<TH>Nombres</TH>
		<TH>Apellidos</TH>
		<TH>Dirección</TH>
		<TH>Teléfono</TH>
    <TH>Email</TH>
    <TH>Documento</TH>
    <TH colspan="3">RUC</TH>

		<TH colspan="3"><%#= link_to 'Nuevo', cliente_new_path , class: "btn btn-link"%></TH></tr>
</thead>
	<tbody>
	<% @clientes.each do |f| %>

	<tr>
		<TD><%= f.id %></TD>
		<TD><%= f.nombre %></TD> 
    	<TD><%= f.apellido %></TD>
    	<TD><%= f.direccion %></TD>
    	<TD><%= f.telefono %></TD>
    	<TD><%= f.email %></TD>
    	<TD colspan="3"><%= f.documento %>
		<TD><%= f.ruc %></TD>


    <TD>
    <%= button_to cliente_show_path([f.id]), {method: :get, class: "btn btn-info"} do %>
        <span class="glyphicon glyphicon-list-alt" aria-hidden="true"> </span> Detalles
        <% end %>
    </TD>

	<TD>
		<%= button_to cliente_edit_path([f.id]), {method: :get, class: "btn btn-info"} do %>
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> Editar
        <% end %>
  	</TD>
 	<TD>
		<%= button_to cliente_destroy_path([f.id]), { method: :delete, data: { confirm: '¿Está seguro?' }, class: "btn btn-danger" } do %>
        <span class="glyphicon glyphicon-trash" aria-hidden="true"> </span> Eliminar
        <% end %>
	</TD>
	</tr>
    <% end %>
    </tbody>

</table>
</div>
</div>
</div>
</div>
</div>


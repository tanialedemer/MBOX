<div class="container-fluid">
<h1 align="center">Clientes</h1>

<div class="boton_redirect">
	<%= link_to 'Ir a Pedidos', cliente_index_path%> &rarr;
</div><br>
<div class="boton_redirect">
	<%= link_to 'Nuevo Cliente', cliente_new_path%> &rarr;
</div><br>

<%=form_tag cliente_index_path, :method => 'get', :style => 'padding-left:4em;font-family:bold;' do %>
	<%= label_tag "Filtrar"%>
	<%= text_field_tag :search, params[:search] %>
	<%= submit_tag "Buscar", class:"btn btn-primary" %>
<%end%>
<table class="table table-hover">
	  <thead class="thead-dark">
	<tr><TH>ID</TH>
		<TH>Nombres</TH>
		<TH>Apellidos</TH>
		<TH>Dirección</TH>
		<TH>Teléfono</TH>
    <TH>Email</TH>
    <TH>Documento</TH>
    <TH colspan="3">RUC</TH>

		<TH colspan="2"><%= link_to 'Nuevo', cliente_new_path , class: "btn btn-link"%></TH></tr>
</thead>
	<tbody>
	<% @clientes.each do |f| %>

	<tr><TD><%= f.id %></TD>
		<TD><%= f.nombre %></TD>
    <TD><%= f.apellido %></TD>
    <TD><%= f.direccion %></TD>
    <TD><%= f.telefono %></TD>
    <TD><%= f.email %></TD>
    <TD colspan="3"><%= f.documento %>
		<TD><%= f.ruc %></TD>



		<TD><%= link_to 'Editar', cliente_edit_path(f['id']) , class: "btn btn-link"%></TD><TD>
<%= link_to 'Borrar', { :action => :destroy, :id => f.id }, :method => :delete, :data => { :confirm => 'Desea borrar el registro?' } , class: "btn btn-danger"%>
		</TD>
	</tr>
    <% end %>
    </tbody>

</table>
</div>

<center>
<button onclick="document.getElementById('id02').style.display='block'" style="width:auto;" class="btn btn-success btn-lg">Registrarse</button>
</center>
<div id="id02" class="modal">
  
  <div class="modal-content animate">
    <div class="imgcontainer">
      <span onclick="document.getElementById('id02').style.display='none'" class="close" title="Close Modal">&times;</span>
    </div>

    <div class="container">

      <div class="col-sm-4 col-sm-offset-4">

    <h1 class="text-center">Registrarse</h1>
    <hr>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.text_field :username, autofocus: false, class: 'form-control' , placeholder: "Usuario"%>
      </div>

      <div class="form-group">
        <%= f.email_field :email, autofocus: false, class: 'form-control', placeholder: "Email" %>
      </div>

      <div class="form-group">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> carateres minimo)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' , placeholder: "ContraseÃ±a"%>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' , placeholder: "Confirmar contraseÃ±a"%>
      </div>

      <div class="form-group">
        <%= f.submit "Registrarse", class: "btn btn-primary btn-block btn-lg" %>
      </div>
      <div class="form-group">
      <button type="button" onclick="document.getElementById('id02').style.display='none'" class="btn btn-danger btn-block btn-lg">Cancel</button>
      </div>
    <% end %>
    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
    </div>
  </div>
</div>
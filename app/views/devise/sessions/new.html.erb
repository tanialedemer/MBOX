
<center>
<button onclick="document.getElementById('id01').style.display='block'" style="width:auto;" class="btn btn-success btn-lg">Iniciar Sesión</button>
</center>
<div id="id01" class="modal">
  
  <div class="modal-content animate">
    <div class="imgcontainer">
      <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">&times;</span>
    </div>

    <div class="container">

      <div class="row">
  <div class="col-sm-4 col-sm-offset-4">
    <h1 class="text-center">Inicio de Sesión</h1>
    <hr>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.text_field :username, autofocus: true, placeholder: 'Usuario', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Contraseña', class: 'form-control' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="form-group">
          <%= f.submit "Ingresar", class: "btn btn-primary btn-block btn-lg" %>
      </div>
      <div class="form-group">
      <button type="button" onclick="document.getElementById('id01').style.display='none'" class="btn btn-danger btn-block btn-lg">Cancel</button>
      </div>
    <% end %>
      <div class="text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
</div>

    </div>
  </div>
</div>
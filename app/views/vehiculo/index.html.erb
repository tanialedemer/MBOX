<div class="container-fluid">
<h1 align="center">Vehiculo</h1>

<div class="boton_redirect">
	<%= link_to 'Ir a Pedidos', vehiculo_index_path%> &rarr;
</div><br>
<div class="boton_redirect">
	<%= link_to 'Nuevo Proveedor',vehiculo_new_path%> &rarr;
</div><br>

<%=form_tag vehiculo_index_path, :method => 'get', :style => 'padding-left:4em;font-family:bold;' do %>
	<%= label_tag "Filtrar"%>
	<%= text_field_tag :search, params[:search] %>
	<%= submit_tag "Buscar", class:"btn btn-primary" %>
<%end%>
<table class="table table-hover">
	  <thead class="thead-dark">
	<tr><TH>ID</TH>
		<TH>Descripcion</TH>
		<TH>Modelo</TH>
		<TH>Color</TH>
		<TH>Matricula</TH>
    <TH>Marca</TH>
    <TH>KM</TH>
    <TH>Chasis</TH>

		<TH colspan="2"><%= link_to 'Nuevo', vehiculo_new_path , class: "btn btn-link"%></TH></tr>
</thead>
	<tbody>
	<% @vehiculos.each do |f| %>

	<tr><TD><%= f.id %></TD>
		<TD><%= f.descripcion %></TD>
		<TD><%= f.modelo %></TD>
		<TD><%= f.color %></TD>
		<TD><%= f.matricula %></TD>
    <TD><%= f.marca %></TD>
    <TD><%= f.km %></TD>
    <TD><%= f.chasis %></TD>



		<TD><%= link_to 'Editar', vehiculo_edit_path(f['id']) , class: "btn btn-link"%></TD><TD>
<%= link_to 'Borrar', { :action => :destroy, :id => f.id }, :method => :delete, :data => { :confirm => 'Desea borrar el registro?' } , class: "btn btn-danger"%>
		</TD>
	</tr>
    <% end %>
    </tbody>

</table>
</div>

<div class="container">
<div class="panel panel-default">
  <div class="panel-heading">Factura de compra</div>
  <div class="panel-body">

<div class="container-fluid">

<%=form_tag compra_index_path, :method => 'get', :style => 'padding-left:4em;font-family:bold;' do %>
	<%= label_tag "Filtrar"%>
	<%= text_field_tag :search, params[:search] %>
	<%= submit_tag "Buscar", class:"btn btn-primary" %>
<%end%>
<div class="col-md-5 col-md-offset-5 col-sm-5 col-sm-offset-5">
      <p>
        <%= button_to compra_new_path, {method: :get, class: "btn btn-success"} do %>
          <span class="glyphicon glyphicon-plus" aria-hidden="true"> </span> Nueva Compra
        <% end %>
      </p>
    </div>
<table class="table table-hover">
	  <thead class="thead-dark">
	<tr><TH>Nro. Fact</TH>
		<TH>Fecha</TH>
		<TH>Proveedor</TH>
		<TH>Total</TH>
		<TH>Saldo</TH>
    <TH>Tipo de Factura</TH>

		<TH colspan="2"><%#= link_to 'Nuevo', cliente_new_path , class: "btn btn-link"%></TH></tr>
  </thead>
	<tbody>
	<% @compras.each do |f| %>

	<tr>
		<TD><%= f.num_fact %></TD>
		<TD><%= f.fecha %></TD> 
    	<TD><%= f.proveedor_id %></TD>
    	<TD><%= f.total %></TD>
    	<TD><%= f.saldo %></TD>
    	<TD><%= f.tipo_factura_id %></TD>

	<TD>
		<%= button_to compra_edit_path([f.id]), {method: :get, class: "btn btn-info"} do %>
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> Editar
        <% end %>
  	</TD>
 	<TD>
		<%= button_to compra_destroy_path([f.id]), { method: :delete, data: { confirm: '¿Está seguro?' }, class: "btn btn-danger" } do %>
        <span class="glyphicon glyphicon-trash" aria-hidden="true"> </span> Eliminar
        <% end %>
	</TD>
	</tr>
    <% end %>
    </tbody>

</table>
</div>
</div>
</div>
</div>
</div>


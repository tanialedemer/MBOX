<div class="container">
<div class="panel panel-default">
  <div class="panel-heading">Repuestos o Servicios</div>
  <div class="panel-body">

<%=form_tag repuesto_servicio_index_path, method: :get, remote: true, id:"search-form", :style => 'padding-left:4em;font-family:bold;' do %>
	<%= label_tag "Filtrar"%>
	<%= text_field_tag :search, params[:keyword] %>
	<%= submit_tag "Buscar", class:"btn btn-primary" %>
<%end%>

<div class="col-md-5 col-md-offset-5 col-sm-5 col-sm-offset-5">
      <p>
        <%= button_to repuesto_servicio_new_path, {method: :get, class: "btn btn-success"} do %>
          <span class="glyphicon glyphicon-plus" aria-hidden="true"> </span> Nuevo Repuesto
        <% end %>
      </p>
    </div>

<table class="table table-hover">
	  <thead class="thead-dark">
	<tr><TH>ID</TH>
		<TH>Codigo</TH>
		<TH>Descripcion</TH>
		<TH>Costo</TH>
    <TH>Precio Venta</TH>
  

		<TH colspan="2"><%#= link_to 'Nuevo', repuesto_servicio_new_path , class: "btn btn-link"%></TH></tr>
</thead>
	<tbody class="buscar">

	<% @repuesto_servicios.each do |f| %>

	<tr><TD><%= f.id %></TD>
		<TD><%= f.codigo %></TD>
		<TD><%= f.descripcion %></TD>
		<TD><%= f.costo %></TD>
    <TD><%= f.precio_venta %></TD>
   

		<TD>
			<%= button_to repuesto_servicio_edit_path([f.id]), {method: :get, class: "btn btn-info"} do %>
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> Editar
        <% end %>
						
			</TD>
			<TD>
				<%= button_to repuesto_servicio_destroy_path([f.id]), { method: :delete, data: { confirm: '¿Está seguro?' }, class: "btn btn-danger" } do %>
		        <span class="glyphicon glyphicon-trash" aria-hidden="true"> </span> Eliminar
		        <% end %>
		</TD>
	</tr>
    <% end %>
    </tbody>

</table>
<footer>
<div class="boton_redirect">
<%== pagy_nav(@pagy) if @pagy.pages > 1 %>
</div><br>
</footer>
</div>
</div>
</div>


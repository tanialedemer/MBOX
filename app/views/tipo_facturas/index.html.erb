

<div class="container">
<div class="panel panel-default">
  <div class="panel-heading">Tipo de Factura</div>
  <div class="panel-body">

<div class="container-fluid">

<p id="notice"><%= notice %></p>

<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_facturas.each do |tipo_factura| %>
      <tr>
        <td><%= tipo_factura.descripcion %></td>
        <td><%= link_to 'Detalles', tipo_factura %></td>
        <td>
          <%= button_to edit_tipo_factura_path(tipo_factura), {method: :get, class: "btn btn-info"} do %>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> Editar
          <% end %>
      </td>
        <td>
          <%= link_to 'Eliminar', tipo_factura, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="col-md-5 col-md-offset-5 col-sm-5 col-sm-offset-5">
      <p>
        <%= button_to new_tipo_factura_path, {method: :get, class: "btn btn-success"} do %>
          <span class="glyphicon glyphicon-plus" aria-hidden="true"> </span> Nuevo tipo de factura
        <% end %>
      </p>
    </div>
</div>
</div>
</div>
</div>
</div>
